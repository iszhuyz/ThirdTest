<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <!--设置圆环大小  -->
            <size android:width="25dp" android:height="25dp"></size>
            <!-- 边线颜色和宽度 -->
            <stroke android:width="5dp" android:color="#21dbdede"></stroke>
        </shape>
    </item>
    <item android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval" >

            <!--设置圆环大小  -->
            <size android:width="20dp" android:height="20dp"></size>
            <!-- 边线颜色和宽度 -->
            <stroke android:width="5dp" android:color="#c7cfd1"></stroke>
            <!-- 填充 -->
            <solid android:color="#c6ced0"></solid>
        </shape>
    </item>
</layer-list>



