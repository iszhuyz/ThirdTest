<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="760dp"
    android:layout_height="390dp"
    android:background="@drawable/background_dialog"
    >

    <TextView
        android:id="@+id/title_811"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:textSize="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:text="信息"/>
    <TextView
        android:id="@+id/text_811"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="这将清除内存所有数据，包括"
        android:layout_below="@id/title_811"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/text_812"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="◉你的账户"
        android:layout_below="@id/text_811"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/text_813"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="◉系统和应用程序的数据和设置"
        android:layout_below="@id/text_812"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:layout_marginLeft="80dp"
        android:textColor="#fff"
        />
    <TextView
        android:id="@+id/text_814"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="◉下载的应用"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:layout_marginLeft="80dp"
        android:layout_below="@id/text_813"
        android:textColor="#fff"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_below="@id/text_814"
        >
        <Button
            android:id="@+id/button_811"
            style="@style/Button"
            android:textSize="25dp"
            android:layout_marginLeft="150dp"
            android:text="确定"
            />
        <Button
            android:id="@+id/button_812"
            style="@style/Button"
            android:layout_marginLeft="80dp"
            android:text="取消"
            />
    </LinearLayout>

</RelativeLayout>
