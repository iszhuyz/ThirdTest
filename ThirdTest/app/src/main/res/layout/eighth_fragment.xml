<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/photo_81"
        style="@style/OnePhoto"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:id="@+id/text_81"
        style="@style/OneStyle"
        android:text="恢复出厂设置"
        />
    <TextView
        android:id="@+id/text_82"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="密码："
        android:layout_below="@id/text_81"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="150dp"
        android:textColor="#fff"
        />
    <EditText
        android:id="@+id/edit_81"
        style="@style/Password"
        android:layout_toRightOf="@id/text_82"
        android:layout_marginTop="197dp">
        <!--<requestFocus/>-->
    </EditText>

    <Button
        android:id="@+id/button_81"
        style="@style/Button"
        android:text="重置机顶盒"
        android:layout_below="@+id/edit_81"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="300dp"
        />

</RelativeLayout>
